<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FoodFinderButtons">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRIDGE"
        android:id="@+id/fridgebutton"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/everythingbutton"
        android:layout_above="@+id/space" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FREEZER"
        android:textSize="26dp"
        android:id="@+id/freezerbutton"
        android:layout_alignTop="@+id/fridgebutton"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/pantrybutton"
        android:layout_alignBottom="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANTRY"
        android:id="@+id/pantrybutton"
        android:textSize="26dp"
        android:layout_alignTop="@+id/everythingbutton"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/everythingbutton"
        android:layout_toEndOf="@+id/space" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVERYTHING"
        android:id="@+id/everythingbutton"
        android:textSize="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignTop="@+id/pantrybutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:id="@+id/space" />

</RelativeLayout>
